<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StandardFragment">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:stretchColumns="*">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#D9D9D9"
            android:baselineAligned="false"
            android:text="Standard"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/myTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="#D9D9D9"
            android:text="Pulse aqui"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TableRow>

            <TextView
                android:id="@+id/myTextView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_span="3"
                android:text="Resultado"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonIgual"
                android:layout_span="1"
                android:text="="
                android:textSize="24sp" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button1"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button2"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button3"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonSuma"
                android:text="+"
                android:textSize="24sp" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button4"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button5"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button6"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonResta"
                android:text="-"
                android:textSize="24sp" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button7"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button8"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button9"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonMultiplica"
                android:text="x"
                android:textSize="24sp" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button0"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonPunto"
                android:text="."
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonBorra"
                android:text="C"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonDivide"
                android:text="/"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonMod"
                android:text="Mod" />

            <Button
                android:id="@+id/buttonExpo"
                android:text="Y^n" />

            <Button
                android:id="@+id/buttonCubo"
                android:text="X³" />

            <Button
                android:id="@+id/buttonFact"
                android:text="n!" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="89dp">

            <Button
                android:id="@+id/buttonRaiz"
                android:text="√" />

            <Button
                android:id="@+id/buttonFrac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D/C" />
            <Button
                android:id="@+id/buttonRNG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RNG"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonA"
                android:text="a" />

            <Button
                android:id="@+id/buttonB"
                android:text="B" />

            <Button
                android:id="@+id/buttonC"
                android:text="c" />

            <Button
                android:id="@+id/buttonFG"
                android:text="abc" />
        </TableRow>

        <TableRow
            android:layout_width="109dp"
            android:layout_height="151dp">
        </TableRow>
    </TableLayout>
</FrameLayout>